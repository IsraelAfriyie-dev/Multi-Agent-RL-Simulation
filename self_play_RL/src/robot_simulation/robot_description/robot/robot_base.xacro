<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro  name="robot_base" params="robot_name">

      <link name="${robot_name}_base_link">
      </link>

      <link name="${robot_name}_chassis">
        <visual>
          <geometry>
            <mesh filename="package://robot_description/meshes/self_play_stage_${robot_name}.dae"/>
          </geometry>
        </visual>

        <collision>
          <geometry>
            <mesh filename="package://robot_description/meshes/self_play_stage.stl"/>
          </geometry>
        </collision>

        <inertial>
          <mass value="100.0"/>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <inertia ixx="0.08333333333333335" ixy="0" ixz="0" iyy="0.08333333333333335" iyz="0" izz="0.08333333333333335"/>
        </inertial>

      </link>

      <joint name="${robot_name}_base_link_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="${robot_name}_base_link" />
        <child link="${robot_name}_chassis" />
      </joint>

    </xacro:macro >

</robot>