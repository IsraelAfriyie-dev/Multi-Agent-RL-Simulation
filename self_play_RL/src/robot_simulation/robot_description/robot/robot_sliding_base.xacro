<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  
  <xacro:macro name="robot_sliding_base" params="robot_name parent *joint_origin *joint_axis">
	<joint name="${robot_name}_sliding_base_joint" type="prismatic">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="${robot_name}_sliding_base_link"/>
          <limit effort="2" velocity="3" lower="-1.48" upper="0.0"/>
          <dynamics damping="0.0" friction="0.1"/>
	  <xacro:insert_block name="joint_axis"/>
	</joint>

	<link name="${robot_name}_sliding_base_link">
	  <visual>
		  <geometry>
		    <mesh filename="package://robot_description/meshes/sliding_base.dae"/>
		  </geometry>
	  </visual>
	  <collision>
		  <geometry>
		    <mesh filename="package://robot_description/meshes/sliding_base.stl"/>
		  </geometry>
	  </collision>
	  <inertial>
		  <origin xyz="0 0 0"/>
		  <mass value="0.45"/>
		  <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.00026" iyz="0" izz="0.000052"/>
	  </inertial>
	</link>

  <gazebo reference="${robot_name}_sliding_base_link">
    <selfCollide>false</selfCollide>
    <mu1 value="0.2" />
    <mu2 value="0.2" />
    <kp>1000000000000</kp>
    <kd>1</kd>
  </gazebo>

  </xacro:macro>
</robot>