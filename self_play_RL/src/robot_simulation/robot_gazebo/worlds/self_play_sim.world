<?xml version="1.0" ?>

<sdf version="1.6">
  <world name="default">

    <gravity>0 0 -3.0</gravity>

    <include>
      <uri>model://sun</uri>
    </include>

    <include>
      <uri>model://ground_plane</uri>
    </include>

    <model name='unit_sphere'>
      <pose>0.0 0.0 0.275 0 0 0</pose>
      <link name='link'>
        <inertial>
          <mass>0.001</mass>
          <inertia>
            <ixx>0.000001</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.000001</iyy>
            <iyz>0</iyz>
            <izz>0.000001</izz>
          </inertia>
          <pose>0 0 0 0 0 0</pose>
        </inertial>
        <collision name='collision'>
          <geometry>
            <sphere>
              <radius>0.075</radius>
            </sphere>
          </geometry>
          <surface>
            <bounce>
              <restitution_coefficient>0.8</restitution_coefficient>
              <threshold>0.01</threshold>
            </bounce>
          </surface>
          <max_contacts>20</max_contacts>
        </collision>
        <visual name='visual'>
          <geometry>
            <sphere>
              <radius>0.075</radius>
            </sphere>
          </geometry>
        </visual>
        <self_collide>0</self_collide>
        <enable_wind>0</enable_wind>
        <kinematic>0</kinematic>
      </link>
    </model>
  <plugin name="gazebo_ros_state" filename="libgazebo_ros_state.so">
      <ros>
        <namespace>/gazebo</namespace>
      </ros>
      <update_rate>50</update_rate>
  </plugin>
  </world>
</sdf>